<%= content_tag :div, class: 'nested-fields', data: { new_record: f.object.new_record? } do %>
  <div class="my-5">
  <%= f.label 'Name' %>
  <%= f.text_field :name %>
  </div>
  <div class="my-5">
    <%= f.label 'Descripcion' %>
    <%= f.text_area :description %>
  </div>
  <%= link_to 'Remove', '#', class: '', data: { action: 'click->nested-form#remove_association' } %>
  <%= f.hidden_field :_destroy %>
<% end %>
