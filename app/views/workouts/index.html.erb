<div class="bg-[url('fatima.jpg')] bg-cover bg-no-repeat bg-center relative h-40">
  <div class="bg-black opacity-50 h-40">
  </div>
</div>
<div class="container mx-auto flex flex-col px-5 py-12 absolute">
  <h2 class="text-sm font-semibold uppercase text-white">High Ground 2023</h2>
  <h1 class="font-bold text-4xl uppercase text-white">Workouts</h1>
</div>

<div class="bg-hg-black">
  <div class="flex justify-center py-5">
    <%= form_with url: "/workouts", method: :get, data: { controller: "workout-division", turbo_frame: "workout-frame" } do |form|%>
      <%= form.collection_select :workout_number, Workout.visible.order(:workout_number), :workout_number, ->(workout) { workout.formatted_name }, {}, data: { action: 'change->workout-division#submit' } %>
    <% end %>
  </div>
</div>

<turbo-frame id="workout-frame">
  <%= form_with url: "/workouts", method: :get, data: { controller: "workout-division", turbo_frame: "division-frame" } do |form|%>
    <%= form.collection_select :division_id, @divisions, :id, :name, {}, data: { action: 'change->workout-division#submit' } %>
  <% end %>
  <turbo-frame id="division-frame">
    <% if @division %>
      <%#= render @division %>
      <p><%= @division.description %></p>
    <% end %>
  </turbo-frame>
</turbo-frame>

